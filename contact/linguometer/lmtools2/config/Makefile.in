CC=g++
OBJS = $(patsubst %.cpp, %.o, $(wildcard *.cpp))

default: $(MAIN)

%.o: %.cpp
	@echo "> Compiling"
	@#$(CC) $(CFLAGS) -c $< -o $@ $(FLAGS)
	$(CC) $(CFLAGS) -c $< -o $@ $(FLAGS)

$(MAIN): $(OBJS)
	@echo "> Linking"
	$(CC) $(LDFLAGS) $(CFLAGS) $(OBJS) -o $(MAIN) $(LIBS) 

clean:
	@echo "> Cleaning"
	@rm -f $(OBJS)
	@rm -f $(MAIN) 
	@rm -f ../../bin/$(MAIN)
	@rm -f temp/*
	@# Assuming I'm not running any threaded code...
	@rm -f core

run:
	@echo "> Executing"
	./$(MAIN)

install:
	@echo "> Installing"
	@cp  $(MAIN) ../../bin/
	@chmod  750 ../../bin/$(MAIN)

all: clean default install

work:
	gvim -geometry 170x45 -O2 ../../include/*.h `find ../../ -name "main.cpp"`

debugger:
	@# Assuming I'm not running any threaded code...
	ddd $(MAIN) core

test: clean default run
